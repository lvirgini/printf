#			VARIABLES				#

NAME =		libftprintf.a

SRC 	=	src/ft_printf.c 		\
			src/ft_printf_utils.c	\
			src/flags_collect.c 	\
			src/type_args.c			\
			src/init_and_clean.c 	\
			src/conversion.c 		\
			src/dispatch.c 			\
			src/make_options.c		\
			src/print_character.c 	\
			src/print_number.c 		\
			src/print_string.c 		\
			src/unicode.c			\
			libft/ft_atoi.c 		\
			libft/ft_bzero.c 		\
			libft/ft_isdigit.c 		\
			libft/ft_memmove.c 		\
			libft/ft_memset.c 		\
			libft/ft_putstr_fd.c 	\
			libft/ft_strchr.c 		\
			libft/ft_strdup.c 		\
			libft/ft_strlen.c	 	
			#libft/ft_substr.c 
	
OBJ =		$(SRC:%.c=%.o))

#	VARIABLES		#
#	Compilation		#

CC = 		gcc

CFLAGS =	-Wall -Werror -Wextra
 
 # 	FONCTIONS	#

%.o: %.c
			$(CC) $(CFLAGS) -o $@ -c $<

$(NAME):	$(OBJ)
			ar rc ${NAME} ${OBJ} -I libft/ -I src/
			ranlib ${NAME}

			
all:		${NAME}


clean:
			rm -rf $(OBJ)

fclean:		clean
			rm -f $(NAME)

re:			fclean all

re_bonus :	fclean bonus 

.PHONY: 	all clean fclean re